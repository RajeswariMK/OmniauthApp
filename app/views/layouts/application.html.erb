<!DOCTYPE html>
<html>
<head>
  <title>OmniauthApp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
      <div id="user_nav">
        <% if current_user %>
          Welcome <%= current_user.name %>!
          <%= link_to "Sign Out", signout_path %>
        <% else %>
          <%= link_to "Sign in with Twitter", "/auth/twitter" %><br />
          <%= link_to "Sign in with Google", "/auth/google_oauth2" %><br />
          <%= link_to "Sign in with Facebook", "/auth/facebook" %><br />
          <%= link_to "Sign in with Foursquare", "/auth/foursquare" %>
         <!-- <p>
		  <strong>Don't use these services?</strong>
		  <%= link_to "Create an account", "/auth/identity/register" %> or 
		  <%= link_to "log in", "/auth/identity" %>
		</p>-->

        <% end %>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      
      <%= yield %>
</div>
</body>
</html>
